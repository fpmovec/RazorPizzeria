@page
@model RazorPizzeria.Pages.PizzaModel
@{
}

@* <a class="nav-link text-dark" asp-area="" asp-page="Forms/CustomPizza">Custom Pizza</a>
<a class="nav-link text-dark" asp-area="" asp-page="Checkout/Checkout">Checkout</a>*@
<div class="text">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our great selection of Pizzas</h1>
        <h4>Choose one or try our PizzaBuilder! Then Order and Done!</h4>
        <h4>No need to give any of your details</h4>
        <h4>We already know everything!</h4>
        <p class="smallText"><i>Only one pizza per order</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100"/>
                    </div>
                    <div class="col-8 align-items-center makeYourOwnText">
                        <h3 style="text-align:left">Create your own Pizza</h3>
                        <p style="text-align:left">Make your own Pizza with PizzaMaker</p>
                        <a class="btn btn-primary" style="float:left" asp-area="" asp-page="Forms/CustomPizza">Try Now</a>
                    </div>
                </div>
            </div>
            @foreach(var pizza in Model.fakePizzaDB)
            {
                var imagePath = "~/images/Pizzas/" + pizza.ImageName + ".png";
            <div class="col-4 mb-5"> 
                <img src="@imagePath" class="w-100" asp-append-version=true/>
                <a class="btn btn-primary mt-1" asp-area="" asp-page="Checkout/Checkout" 
                asp-route-PizzaName="@pizza.PizzaName" asp-route-ImageTitle="@pizza.ImageName" asp-route-PizzaPrice="@pizza.TotalPrice">Get this Pizza!</a>
                <br/>
            </div>
            }
        </div>
    </div>
</div> 